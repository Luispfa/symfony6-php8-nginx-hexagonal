<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="App\Book\Infrastrucure\Persistence\Doctrine\Repository\DoctrineBookRepository" name="App\Book\Domain\Book" table="book">
    <id name="id" type="string" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="title" type="string" column="title" length="255" nullable="false"/>
    <field name="image" type="string" column="image" length="512" nullable="true"/>
  </entity>
</doctrine-mapping>
